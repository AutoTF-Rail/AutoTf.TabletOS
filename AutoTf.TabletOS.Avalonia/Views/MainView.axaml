<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AutoTf.TabletOS.Avalonia.ViewModels"
             xmlns:controls="clr-namespace:AutoTf.TabletOS.Avalonia.UI.Controls"
             mc:Ignorable="d"
             d:DesignWidth="1280"
             d:DesignHeight="800"
             Height="800"
             Width="1280"
             x:Class="AutoTf.TabletOS.Avalonia.Views.MainView"
             x:DataType="viewModels:MainViewViewModel">
    <Grid>
        <Image Source="../Assets/TabletOSStart.png" Stretch="Fill"></Image>
        <controls:TopBar VerticalAlignment="Stretch" />
        
        <Button IsVisible="{Binding SkipButtonVisible}" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding SkipButtonCommand}">Skip</Button>
    </Grid>
</UserControl>