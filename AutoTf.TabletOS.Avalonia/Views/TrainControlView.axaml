<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:AutoTf.TabletOS.Avalonia.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AutoTf.TabletOS.Avalonia.Views.TrainControlView">
    <Grid>
        <Grid Name="RootGrid">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="125" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <Button Click="TrainInfo_Click" Padding="0" Grid.Column="0" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="5">
                        <Grid>
                            <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                            <DockPanel>
                                <Image Source="../Assets/RoundTrainIcon.png" VerticalAlignment="Stretch" Margin="10"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontSize="31">
                                        <Run Name="EvuNameBox">EVU: Unknown</Run>
                                        <Run> - </Run>
                                        <Run Name="TrainNameBox">Train Name</Run>
                                    </TextBlock>
                                    <TextBlock FontSize="17" FontWeight="Bold" Foreground="DimGray">
                                        <Run Name="TrainIdBox">000-000</Run>
                                        <Run> - SW-Version:</Run>
                                        <Run Name="TrainVersion"></Run>
                                    </TextBlock>
                                </StackPanel>
                            </DockPanel>
                        </Grid>
                    </Button>
                    
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="105" />
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="5">
                            <Grid>
                                <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                                <DockPanel>
                                    <Image Source="../Assets/AIDriverIcon.png" VerticalAlignment="Stretch" Margin="10"/>
                                    <Button DockPanel.Dock="Right" FontSize="28" Margin="5" BorderBrush="Black" BorderThickness="2" CornerRadius="10" VerticalContentAlignment="Center" HorizontalAlignment="Center" Height="80" Width="80">Stop</Button>
                                    <StackPanel Margin="5" VerticalAlignment="Center">
                                        <TextBlock FontSize="25" Foreground="Green" FontWeight="Bold">Enabled</TextBlock>
                                        <TextBlock FontSize="23" Foreground="Gray" FontWeight="Bold">Next stop: The moon</TextBlock>
                                    </StackPanel>
                                </DockPanel>
                            </Grid>
                        </Border>
                        <Button Grid.Column="1" Padding="0" Width="95" Background="Transparent" Click="ChangeTrain_Click" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="5">
                            <Grid HorizontalAlignment="Center">
                                <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                                <Image Source="../Assets/TrainSwitchIcon.png" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="10"/>
                            </Grid>
                        </Button>
                    </Grid>
                </Grid>
                
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="220" />
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0" Margin="5">
                        <!-- <Grid.RowDefinitions> -->
                        <!--     <RowDefinition Height="1.6*" /> -->
                        <!--     <RowDefinition /> -->
                        <!-- </Grid.RowDefinitions> -->
                        <!-- -->
                        <Border Margin="10, 5, 5, 0" BorderBrush="Black" CornerRadius="10" ClipToBounds="True" BorderThickness="2">
                            <Grid>
                                <Border CornerRadius="10, 10, 0, 0" Background="Gray" Opacity=".2"/>
                                <StackPanel HorizontalAlignment="Stretch">
                                    <Button Click="Control_Click" HorizontalAlignment="Stretch" Padding="0" Background="Transparent" BorderBrush="Black" BorderThickness="0, 0, 0, 2">
                                        <Grid>
                                            <Border Background="Gray" Opacity="0.2" />
                                            <DockPanel>
                                                <Image DockPanel.Dock="Right" Source="../Assets/Arrow_Right.png" Height="20" Margin="10" />
                                                <TextBlock FontSize="25" Margin="10, 5">Controls</TextBlock>
                                            </DockPanel>
                                        </Grid>
                                    </Button>
                                    <Image ClipToBounds="True" Name="PreviewImage" Source="../Assets/LoadingCameraFeedImage.png"></Image>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                    </Grid>
                    <Grid Grid.Column="1" Margin="5">
                        <Border>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="100" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                
                                <DockPanel Grid.Row="0" LastChildFill="False">
                                    <Button Padding="0" Width="95" Background="Transparent" Click="ChangeTrain_Click" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="5, 0">
                                        <Grid HorizontalAlignment="Center">
                                            <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                                            <Image Source="../Assets/PromileAnzeigeWhite.png" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="16"/>
                                        </Grid>
                                    </Button>
                                    <Button Padding="0" Width="95" Height="95" Background="Transparent" Click="ChangeTrain_Click" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="5, 0">
                                        <Grid HorizontalAlignment="Center">
                                            <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                                            <Image Source="../Assets/SpeedIndicator.png" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="20"/>
                                        </Grid>
                                    </Button>
                                </DockPanel>
                                
                                <Grid Grid.Row="1">
                                    <Border Background="Gray" Opacity=".4" BorderBrush="Black" CornerRadius="15" BorderThickness="1" ClipToBounds="True"></Border>
                                    <StackPanel>
                                        <DockPanel VerticalAlignment="Stretch" LastChildFill="False">
                                            <Button Padding="0" Width="95" Background="Transparent" Click="ChangeTrain_Click" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="5">
                                                <Grid HorizontalAlignment="Center">
                                                    <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                                                    <Image Source="../Assets/SpeedSign.png" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="12"/>
                                                </Grid>
                                            </Button>
                                            <Button Name="EmergencyStopButton" IsEnabled="False" Padding="0" Width="95" Height="95" Background="Transparent" Click="ChangeTrain_Click" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="DarkRed" BorderThickness="2" Margin="5">
                                                <Grid HorizontalAlignment="Stretch">
                                                    <Border CornerRadius="10" Background="Red" Opacity=".4"/>
                                                    <TextBlock HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold">Emergency <LineBreak /> Break</TextBlock>
                                                </Grid>
                                            </Button>
                                        </DockPanel>
                                        <Button HorizontalAlignment="Center" Margin="5" Height="40" FontSize="25" Width="140" HorizontalContentAlignment="Center">100%</Button>
                                        
                                        <Button HorizontalAlignment="Center" Margin="3" Height="40" FontSize="25" Width="130" HorizontalContentAlignment="Center">75%</Button>
                                        <Button HorizontalAlignment="Center" Margin="3" Height="40" FontSize="25" Width="120" HorizontalContentAlignment="Center">50%</Button>
                                        <Button HorizontalAlignment="Center" Margin="3" Height="40" FontSize="25" Width="110" HorizontalContentAlignment="Center">25%</Button>
                                        
                                        <Button HorizontalAlignment="Center" Margin="5" Height="40" FontSize="25" Width="100" HorizontalContentAlignment="Center">0%</Button>
                                        
                                        <Button HorizontalAlignment="Center" Margin="3" Height="40" FontSize="25" Width="110" HorizontalContentAlignment="Center">-25%</Button>
                                        <Button HorizontalAlignment="Center" Margin="3" Height="40" FontSize="25" Width="120" HorizontalContentAlignment="Center">-50%</Button>
                                        <Button HorizontalAlignment="Center" Margin="3" Height="40" FontSize="25" Width="130" HorizontalContentAlignment="Center">-75%</Button>
                                        
                                        <Button HorizontalAlignment="Center" Margin="5" Height="40" FontSize="25" Width="140" HorizontalContentAlignment="Center">-100%</Button>
                                    </StackPanel>
                                </Grid>
                                
                                <Border Grid.Row="1" Name="ControlsUnavailableSection" Background="Transparent" ClipToBounds="True" BorderThickness="0" CornerRadius="10" HorizontalAlignment="Stretch">
                                    <Grid>
                                        <Grid Background="Black" Opacity=".7"></Grid>
                                        <TextBlock HorizontalAlignment="Center" Width="260" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="20">
                                            <TextBlock.RenderTransform>
                                                <RotateTransform Angle="90"/>
                                            </TextBlock.RenderTransform>
                                            Controls are not available.
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                
                <Grid Grid.Row="0" Grid.RowSpan="3" IsVisible="False" Name="LoadingArea" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid Background="Black" Opacity=".72" />
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Loading...</TextBlock>
                        <TextBlock Name="LoadingName" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Getting Data</TextBlock>
                    </StackPanel>
                </Grid>
                
            </Grid>
        </Grid>
        <views:TopBar Grid.Row="0" VerticalAlignment="Top" />
    </Grid>
</UserControl>
