<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:AutoTf.TabletOS.Avalonia.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AutoTf.TabletOS.Avalonia.Views.TrainControlView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="125" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="5">
                <Grid>
                    <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                    <DockPanel>
                        <Image Source="../Assets/PersonIcon.png" VerticalAlignment="Stretch" Margin="15"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Name="EvuNameBox" FontSize="31">EVU: Unknown</TextBlock>
                            <TextBlock FontSize="17" FontWeight="Bold" Foreground="DimGray" Name="NextConnectionDay">Connection date is unknown. Please connect soon.</TextBlock>
                        </StackPanel>
                    </DockPanel>
                </Grid>
            </Border>
            
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="105" />
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="5">
                    <Grid>
                        <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                        <DockPanel>
                            <Image Source="../Assets/RoundTrainIcon.png" VerticalAlignment="Stretch" Margin="10"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock FontSize="31" Name="TrainNameBox">Train Name</TextBlock>
                                <TextBlock FontSize="21" FontWeight="Bold" Foreground="DimGray" Name="TrainIdBox">000-000</TextBlock>
                            </StackPanel>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Margin="2">
                                <TextBlock FontSize="20" Foreground="DimGray">Next connection day in:</TextBlock>
                                <TextBlock FontSize="20" FontWeight="Bold" Name="NextTrainConnectionDay">unknown</TextBlock>
                            </StackPanel>
                        </DockPanel>
                    </Grid>
                </Border>
                <Button Grid.Column="1" Padding="0" Background="Transparent" Click="ChangeTrain_Click" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Black" BorderThickness="2" Margin="5">
                    <Grid HorizontalAlignment="Center">
                        <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                        <Image Source="../Assets/TrainSwitchIcon.png" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="10"/>
                    </Grid>
                </Button>
            </Grid>
        </Grid>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <Border Margin="15, 5, 5, 0" Grid.Row="0" BorderBrush="Black" CornerRadius="10" BorderThickness="2">
                    <Grid>
                        <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                        <StackPanel HorizontalAlignment="Stretch">
                            <Button HorizontalAlignment="Stretch" Padding="0" Background="Transparent" BorderBrush="Black" BorderThickness="0, 0, 0, 2">
                                <Grid>
                                    <Border Background="Gray" Opacity="0.2" />
                                    <DockPanel>
                                        <Image DockPanel.Dock="Right" Source="../Assets/Arrow_Right.png" Height="20" Margin="10" />
                                        <TextBlock FontSize="25" Margin="10, 5">Camera &amp; Sensors</TextBlock>
                                    </DockPanel>
                                </Grid>
                            </Button>
                            <Image Name="PreviewImage" Width="616" Source="../Assets/ImageExampleSmall.png"></Image>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <Border Margin="15, 20, 5, 20" Grid.Row="1" BorderBrush="Black" CornerRadius="10" BorderThickness="2">
                    <Grid>
                        <Border CornerRadius="10" Background="Gray" Opacity=".2"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <Grid Grid.Row="0" Grid.RowSpan="3" IsVisible="False" Name="LoadingArea" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid Background="Black" Opacity=".72" />
            <StackPanel VerticalAlignment="Center">
                <TextBlock FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Loading...</TextBlock>
                <TextBlock Name="LoadingName" FontSize="17" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Processing trains</TextBlock>
            </StackPanel>
        </Grid>
        
        <views:TopBar Grid.Row="0" VerticalAlignment="Top" />
    </Grid>
</UserControl>
