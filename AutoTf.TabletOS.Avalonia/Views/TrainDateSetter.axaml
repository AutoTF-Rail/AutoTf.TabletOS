<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Height="800"
             Width="1280"
             x:Class="AutoTf.TabletOS.Avalonia.Views.TrainDateSetter">
    <Grid>
        <Grid Background="Black" Opacity=".4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" PointerReleased="BackButton_Click"></Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Width="325">
            <Border CornerRadius="15" Background="Gray" Opacity=".7"></Border>
            <DatePicker Name="DatePicker" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 30" FontSize="18"></DatePicker>
            <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="18" Click="BackButton_Click" Margin="5" Foreground="Black" HorizontalContentAlignment="Center" Width="75" BorderBrush="Black">Back</Button>
            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="18" Click="SetButton_Click" Margin="5" Foreground="Black" HorizontalContentAlignment="Center" Width="75" BorderBrush="Black">Set</Button>
        </Grid>
        <!-- <DateTimePickerPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"></DateTimePickerPanel> -->
            
    </Grid>
</UserControl>
